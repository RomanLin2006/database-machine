<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controllers.RepairController" hgap="10" vgap="10" alignment="CENTER" minWidth="480" minHeight="460">
    <Label text="Станок:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <ComboBox fx:id="machineComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <CheckBox fx:id="newMachineCheckBox" text="Добавить новый станок" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label text="Клиент:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="clientField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Label text="Контактная информация:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="contactInfoField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Label text="Бренд:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="brandField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <Label text="Год выпуска:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextField fx:id="yearField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    <Label text="Страна-производитель:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <TextField fx:id="countryField" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    <Label text="Тип ремонта:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <TextField fx:id="repairTypeField" GridPane.rowIndex="7" GridPane.columnIndex="1" />
    <Label text="Дата:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
    <TextField fx:id="startDateField" GridPane.rowIndex="8" GridPane.columnIndex="1" />
    <Label text="Длительность (дн.):" GridPane.rowIndex="9" GridPane.columnIndex="0" />
    <TextField fx:id="durationDaysField" GridPane.rowIndex="9" GridPane.columnIndex="1" />
    <Label text="Стоимость:" GridPane.rowIndex="10" GridPane.columnIndex="0" />
    <TextField fx:id="costField" GridPane.rowIndex="10" GridPane.columnIndex="1" />
    <HBox spacing="10" GridPane.rowIndex="11" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER">
        <Button text="Сохранить" onAction="#handleSave" />
        <Button text="Отмена" onAction="#handleCancel" />
    </HBox>
</GridPane>